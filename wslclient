#!/bin/bash
# -*- mode: sh; coding: utf-8-unix -*-

command_name=$(basename "$0")

function usage_exit() {
    cat << EOF >&2
Usage: $command_name [file]
       $command_name -h
EOF
    exit $1
}

while getopts :h opt; do
    case $opt in
        h)
            usage_exit 0
            ;;
        \?)
            usage_exit 2
            ;;
    esac
done

shift $((OPTIND - 1))

if [ $# -ne 0 ] && [ $# -ne 1 ]; then
    usage_exit 2
fi

if [ $# -eq 0 ]; then
    wslclient.exe
else
    # シンボリックリンクを解決しない絶対パスを取得する（このため、readlink を使っていない）
    file_name=$(echo "$(cd $(dirname "$1") && pwd)/$(basename "$1")" | sed "s_^//_/_")

    wslclient.exe "$file_name"
fi
